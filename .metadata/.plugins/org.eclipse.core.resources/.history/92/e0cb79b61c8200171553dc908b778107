	         		<value>/reactapp/queryAppToAnnouncement.do</value>
				</list>  
         	</property>  
       </bean> 
     </mvc:interceptor>    
     
      <mvc:interceptor>   
        <mvc:mapping path="/admin/**" />   
         <bean class="com.pjzb.interceptor.AdminLoginInterceptor">   
<!--          admin端不用拦截的请求加在这里 -->
         	<property name="uncheckUrls">  
        	 	<list>  
	         		<value>/admin/login.do</value>
				</list>  
         	</property>  
       </bean> 
     </mvc:interceptor>   
     
      
 </mvc:interceptors>      

	
