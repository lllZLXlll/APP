@charset "utf-8";
*{margin:0;padding:0;border:0;word-wrap: break-word}
body{
	background:#007be3 url(../images/activity_02/activity_bg.jpg) top center /100% no-repeat ;
	}
a{
	text-decoration: none;
}
.activity{
	width:100%;
	height:100%;
	position:relative;
}
.activity .btn{
	display:block;
	width:2.2rem;
	height:0.6rem;
	line-height:0.6rem;
	font-size:0.26rem;
	border-radius:0.3rem;
	color:#f84015;
	text-align:center;
	background:-webkit-gradient(
		linear,
		left top,
		left bottom,
		color-stop(0,#fffb76),
		color-stop(1,#fef11d)
	);
	position:absolute;
	top:3.44rem;
	left:50%;
	margin-left:-1.1rem;
}
.activity-content{
	padding:4.95rem 0.6rem 0;
	height:4rem;
}
.activity-content h3{
	font-size:0.26rem;
	color:#f84015;
	line-height:0.48rem;
	text-align:left;
	font-weight:normal;
	text-indent: 0.3rem;
}
.activity-content p{
	font-size:0.2rem;
	color:#f84015;
	line-height:0.4rem;
	color:#777;
	padding-left:0.3rem;
	text-align: left;
}
.activity-content p span{
	color:#f84015;
}
.explain{
	padding: 1rem 0.4rem 0.3rem;
}
.explain h3{
	font-size:0.26rem;
	line-height:0.48rem;
	color:#fff;
}
.explain p{
	font-size:0.18rem;
	line-height:0.32rem;
	color:#fff;
	text-indent:-0.28rem;
	padding-left:0.28rem;
}