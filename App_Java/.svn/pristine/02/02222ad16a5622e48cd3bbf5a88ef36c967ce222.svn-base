			}
			*/
			String line=null;   
			while((line=br.readLine())!=null){   
				sb.append(line);  
			}   
			br.close(); 
			
			//is.close();
		} catch (MalformedURLException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		return sb.toString();
	}

