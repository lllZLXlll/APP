.mod-guide{
	.adv{
		padding-bottom: 20px;
		img{
			width: 1000px;
			height: 160px;
		}
	}
	.item{
		margin-bottom: 24px;
		background: #fff;
		height: 300px;
		padding: 60px 74px;
		.main{
			float: left;
			width: 430px;
			font-size: 16px;
			color: #8d8d8d;
			line-height: 30px;
			h3{
				font-size: 30px;
				line-height: 24px;
				color: #1e1e1e;
				margin: 24px 0;
			}
			.btn{
				position: relative;
				top: 1px;
				display: inline-block;
				width: 190px;
				height: 40px;
				line-height: 40px;
				background: #3180BF;
				color: #FFF;
				font-size: 16px;
				text-align: center;
				border-radius: 3px;
				margin-top: 40px;
			}
		}
		.pic{
			padding-left: 500px;
		}
		&.right{
			.main{
				float: right;
			}
			.pic{
				padding-left: 0;
				padding-right: 500px;
			}
		}
	}
}