.mod-form{
	h3{
		font-size: 16px;
		font-weight: bold;
	}
	padding: 26px 0;
	a{
		color: #3180bf
	}
	input[type="text"], 
	input[type="number"], 
	select, 
	input[type="password"]{
		min-width: 120px;
		width: 120px;
		height: 24px;
		line-height: 24px;
		border-radius: 2px;
		border: 1px solid #cbcbcb;
		text-indent: .5em;
		margin-right: .5em;
		&.mini{
			width: 40px;
		}
		&.larage{
			width: 220px;
		}
		&.auto{
			width: auto;
		}
	}
	textarea{
		height: 92px;
		min-width: 220px;
		border: 1px solid #cbcbcb;
	}
	select{
		height: 28px;
		line-height: 28px;
	}
	input[type="radio"]{
		position: relative;
		top: 2px;
		margin: 0 4px 0 0;
	}
	img{
		vertical-align: middle;
	}
	.item{
		overflow: hidden;
		font-size: 14px;
		padding: 7px 0;
		line-height: 28px;
		.name{
			display: inline-block;
			width: 90px;
			text-align: right;
			font-size: 14px;
			padding-right: 24px;
			float: left;
			height: 28px;
		}
		.ipt{
			padding-left: 114px;
		}

	}
	.pay-list{
		overflow: hidden;
		li{
			float: left;
			width: 25%;
			margin-bottom: 20px;
			height: 32px;
			input[type="radio"]{
				position: relative;
				top: -8px;
				margin-right: 8px;
			}
		}
	}
	.btn{
		display: inline-block;
		background: #3180bf;
		color: #fff;
		font-size: 16px;
		border-radius: 3px;
		border: none;
		padding: 7px 26px;
		font-family: 'Helvetica Neue', 'Roboto', "microsoft yahei";
	}
	.btn-inline{
		position: relative;
		top: 1px;
		margin-left: 8px;
		border: 1px solid #3180bf;
		border-radius: 3px;
		padding: 3px 10px;
	}
	.submit{
		text-align: center;
	}
	.tip{
		font-size: 14px;
		color: #8d8d8d;
		line-height: 22px;
		margin-top: 20px;
		&.small{
			font-size: 12px;
			margin: 0;
			padding: 0;
		}
	}

	&.replay{
		input{
			height: 34px;
		}
		textarea{
			width: 100%;
			height: 174px;
			border-radius: 4px;
			padding: 0;
			border: 1px solid #cbcbcb;
			margin-bottom: 24px;
		}
	}
}