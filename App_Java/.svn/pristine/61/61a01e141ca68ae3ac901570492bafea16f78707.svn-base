$(function() {
	  $('.side-bar dl dd').css({'display':'none'});

	  $('.side-bar dl').click(function() {
	    $(this).find('dd').toggle();
	  });

	  $('.side-bar dt').hover(function() {
			$(this).css({'background':'#f9f9f9'});
		},function() {
			$(this).css({'background':''});
		});

});






