html,body{width:100%;height:100%;}
a:visited{color: #fff}
a:active {color: #fff}
a:link {color: #fff}
a:hover {color: #fff}
body{background: #f5f5f5 url(../images/body_bg.png) no-repeat center 80% / 70%!important;background-size:100px;}
.content-login{margin:0.4rem 0; }
.text-item{height:3rem;background-color: #fff;margin-bottom:0.2rem;padding-left:0.8rem;position: relative;}
.text-item input{height:1.2rem;margin:1rem 0;border:none;line-height:1.2rem;font-size:0.8rem;}
.text-item-submit{margin-top:1rem;}
.text-item-more{width:80%;margin:0 auto;font-size:0.6rem;}
.text-item-more a{color:#eb3d3d;font-size:0.6rem;}
.text-item-more p{width:50%;float: left;}
.btn{height:1.6rem;color:#fff;line-height:1.6rem;font-size:0.7rem;background-color: #eb3d3d;padding:0 0.4rem;display: block;border-radius:0.4rem;box-shadow:0 0.1rem 0 #aa0b0b;text-align: center;}
.btn-msg{position: absolute;right:1rem;top:0.7rem;}
.btn-submit{height:2rem;width:80%;line-height:2rem;margin:0 auto;}
.align-left{text-align: left;}
.align-right{text-align: right;}